<%- include('partials/header', { title: 'GutGuard Academy' }) %>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<style>
	footer{
		position: fixed;
		bottom: 0;
		width: 100%
	}

    @media screen and (max-width: 768px) {
    nav {
        position: relative;
    }

    .logo img {
        height: 40px; /* Smaller logo for mobile */
    }

    .mobile-menu-toggle {
      display: block;
      position: absolute;
      right: 20px;
      top: 50%;
      transform: translateY(-50%);
      z-index: 100;
      outline: none;
      border: none;
      background: transparent;
      cursor: pointer;
      color:white;
  }

    .nav-links {
        display: none;
        flex-direction: column;
        position: absolute;
        top: 100%;
        left: 0;
        width: 100%;
        background-color: #2c3e50;
        padding: 20px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.2);
    }

    .nav-links.show {
        display: flex;
    }

    .nav-links li {
        margin: 10px 0;
        text-align: center;
    }
}
</style>

<section class="education-header">
    <h1>GutGuard Academy</h1>
    <p>Learn About Gut Health and Microbiome Science</p>
</section>

<section class="educational-topics">
    <h2>Explore Our Topics</h2>
    <% topics.forEach(function(topic) { %>
        <div class="topic-card">
            <h3><%= topic.title %></h3>
            <p><%= topic.shortDesc %></p>
            <div class="topic-meta">
                <span>Read Time: <%= topic.readTime %></span>
                <span>Difficulty: <%= topic.difficulty %></span>
            </div>
            <a href="/education/topic/<%= topic.id %>">Read More</a>
        </div>
    <% }); %>
</section>

<section class="video-resources">
    <h2>Video Learning</h2>
    <% videos.forEach(function(video) { %>
        <div class="video-card">
            <img src="<%= video.thumbnailUrl %>" alt="<%= video.title %>">
            <h3><%= video.title %></h3>
            <p>Duration: <%= video.duration %></p>
            <p>Presenter: <%= video.presenter %></p>
            <a href="#">Watch Video</a>
        </div>
    <% }); %>
</section>

<script>
   document.addEventListener('DOMContentLoaded', () => {
    const mobileMenuToggle = document.createElement('button');
    mobileMenuToggle.classList.add('mobile-menu-toggle');
    mobileMenuToggle.innerHTML = `
        <i class="fa fa-chevron-down"></i>
    `;

    const nav = document.querySelector('nav');
    const navLinks = document.querySelector('.nav-links');
    nav.insertBefore(mobileMenuToggle, navLinks);

    mobileMenuToggle.addEventListener('click', () => {
        navLinks.classList.toggle('show');
        mobileMenuToggle.classList.toggle('active');
    });
});
</script>

<%- include('partials/footer') %>