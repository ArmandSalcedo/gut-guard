<style>
    body {
  font-family: 'Arial', sans-serif;
  line-height: 1.6;
  margin: 0;
  padding: 0;
  color: #333;
}

.container {
  width: 80%;
  margin: auto;
  overflow: hidden;
  padding: 20px;
}

.product-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20px;
  justify-content: center;
}

.product-card {
  border: 1px solid #ddd;
  border-radius: 8px;
  padding: 15px;
  width: 250px;
  text-align: center;
  box-shadow: 0 4px 6px rgba(0,0,0,0.1);
}

.product-card .price {
  font-weight: bold;
  color: #4a4a4a;
}

.btn {
  display: inline-block;
  background-color: #007bff;
  color: white;
  padding: 10px 15px;
  text-decoration: none;
  border-radius: 5px;
  transition: background-color 0.3s ease;
}

.btn:hover {
  background-color: #0056b3;
}

footer{
  position: fixed;
  bottom: 0;
  width: 100%
}
</style>

<%- include('partials/header', { title: 'Error' }) %>

<section class="error-page">
    <h1><%= title || 'Oops! Something Went Wrong' %></h1>
    <p><%= message || 'We apologize for the inconvenience. Please try again later.' %></p>
    
    <div class="error-actions">
        <a href="/" class="btn">Return to Homepage</a>
        <a href="/support" class="btn secondary">Contact Support</a>
    </div>
</section>

<%- include('partials/footer') %>