<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<style>
    body {
  font-family: 'Arial', sans-serif;
  line-height: 1.6;
  margin: 0;
  padding: 0;
  color: #333;
}

.container {
  width: 80%;
  margin: auto;
  overflow: hidden;
  padding: 20px;
}

.product-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20px;
  justify-content: center;
}

.product-card {
  border: 1px solid #ddd;
  border-radius: 8px;
  padding: 15px;
  width: 250px;
  text-align: center;
  box-shadow: 0 4px 6px rgba(0,0,0,0.1);
}

.product-card .price {
  font-weight: bold;
  color: #4a4a4a;
}

.btn {
  display: inline-block;
  background-color: #007bff;
  color: white;
  padding: 10px 15px;
  text-decoration: none;
  border-radius: 5px;
  transition: background-color 0.3s ease;
}

.btn:hover {
  background-color: #0056b3;
}

footer{
  position: fixed;
  bottom: 0;
  width: 100%
}

@media screen and (max-width: 768px) {
  nav {
      position: relative;
  }

  .logo img {
      height: 40px; /* Smaller logo for mobile */
  }

  .mobile-menu-toggle {
      display: block;
      position: absolute;
      right: 20px;
      top: 50%;
      transform: translateY(-50%);
      z-index: 100;
      outline: none;
      border: none;
      background: transparent;
      cursor: pointer;
      color:white;
  }

  .nav-links {
      display: none;
      flex-direction: column;
      position: absolute;
      top: 100%;
      left: 0;
      width: 100%;
      background-color: #2c3e50;
      padding: 20px;
      box-shadow: 0 2px 5px rgba(0,0,0,0.2);
  }

  .nav-links.show {
      display: flex;
  }

  .nav-links li {
      margin: 10px 0;
      text-align: center;
  }
}
</style>

<%- include('partials/header', { title: 'Error' }) %>

<section class="error-page">
    <h1><%= title || 'Oops! Something Went Wrong' %></h1>
    <p><%= message || 'We apologize for the inconvenience. Please try again later.' %></p>
    
    <div class="error-actions">
        <a href="/" class="btn">Return to Homepage</a>
        <a href="/support" class="btn secondary">Contact Support</a>
    </div>
</section>

<script>
 document.addEventListener('DOMContentLoaded', () => {
    const mobileMenuToggle = document.createElement('button');
    mobileMenuToggle.classList.add('mobile-menu-toggle');
    mobileMenuToggle.innerHTML = `
        <i class="fa fa-chevron-down"></i>
    `;

    const nav = document.querySelector('nav');
    const navLinks = document.querySelector('.nav-links');
    nav.insertBefore(mobileMenuToggle, navLinks);

    mobileMenuToggle.addEventListener('click', () => {
        navLinks.classList.toggle('show');
        mobileMenuToggle.classList.toggle('active');
    });
});
  </script>

<%- include('partials/footer') %>