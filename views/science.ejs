<%- include('partials/header', { title: 'Scientific Research & Innovation' }) %>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<style>
	footer{
		position: fixed;
		bottom: 0;
		width: 100%
	}

    @media screen and (max-width: 768px) {
    nav {
        position: relative;
    }

    .logo img {
        height: 40px; /* Smaller logo for mobile */
    }

    .mobile-menu-toggle {
      display: block;
      position: absolute;
      right: 20px;
      top: 50%;
      transform: translateY(-50%);
      z-index: 100;
      outline: none;
      border: none;
      background: transparent;
      cursor: pointer;
      color:white;
  }

    .nav-links {
        display: none;
        flex-direction: column;
        position: absolute;
        top: 100%;
        left: 0;
        width: 100%;
        background-color: #2c3e50;
        padding: 20px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.2);
    }

    .nav-links.show {
        display: flex;
    }

    .nav-links li {
        margin: 10px 0;
        text-align: center;
    }
}
</style>

<section class="science-header">
    <h1>GutGuard Scientific Research</h1>
    <p>Advancing Gut Health Through Rigorous Research</p>
</section>

<section class="research-studies">
    <h2>Latest Research Publications</h2>
    <% researchStudies.forEach(function(study) { %>
        <div class="study-card">
            <h3><%= study.title %></h3>
            <p>By <%= study.author %> | <%= study.year %></p>
            <p><%= study.summary %></p>
            <a href="<%= study.fullPaperUrl %>" target="_blank">Read Full Paper</a>
        </div>
    <% }); %>
</section>

<section class="our-scientists">
    <h2>Meet Our Research Team</h2>
    <% scientists.forEach(function(scientist) { %>
        <div class="scientist-profile">
            <h3><%= scientist.name %></h3>
            <p><strong><%= scientist.title %></strong></p>
            <p><%= scientist.bio %></p>
        </div>
    <% }); %>
</section>

<script>
   document.addEventListener('DOMContentLoaded', () => {
    const mobileMenuToggle = document.createElement('button');
    mobileMenuToggle.classList.add('mobile-menu-toggle');
    mobileMenuToggle.innerHTML = `
        <i class="fa fa-chevron-down"></i>
    `;

    const nav = document.querySelector('nav');
    const navLinks = document.querySelector('.nav-links');
    nav.insertBefore(mobileMenuToggle, navLinks);

    mobileMenuToggle.addEventListener('click', () => {
        navLinks.classList.toggle('show');
        mobileMenuToggle.classList.toggle('active');
    });
});
</script>

<%- include('partials/footer') %>