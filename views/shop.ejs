<%- include('partials/header', { title: 'Shop GutGuard Products' }) %>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<style>
    @media screen and (max-width: 768px) {
    nav {
        position: relative;
    }

    .logo img {
        height: 40px; /* Smaller logo for mobile */
    }

    .mobile-menu-toggle {
      display: block;
      position: absolute;
      right: 20px;
      top: 50%;
      transform: translateY(-50%);
      z-index: 100;
      outline: none;
      border: none;
      background: transparent;
      cursor: pointer;
      color:white;
  }

    .nav-links {
        display: none;
        flex-direction: column;
        position: absolute;
        top: 100%;
        left: 0;
        width: 100%;
        background-color: #2c3e50;
        padding: 20px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.2);
    }

    .nav-links.show {
        display: flex;
    }

    .nav-links li {
        margin: 10px 0;
        text-align: center;
    }
}
</style>

<section class="shop-header">
    <h1>GutGuard Product Line</h1>
    <p>Scientific Probiotics for Optimal Gut Health</p>
</section>

<section class="product-catalog">
    <% products.forEach(function(product) { %>
        <div class="product-card">
            <img src="/images/<%= product.id.toLowerCase() %>-product.png" alt="<%= product.name %>">
            <h2><%= product.name %></h2>
            <p><%= product.description %></p>
            <span class="price" style="margin-right: 1em;">$<%= product.price.toFixed(2) %></span>
            <div class="product-details">
                <a href="/shop/product/<%= product.id %>" class="btn">View Details</a>
				<a href="/cart/product/<%= product.id %>" class="btn">Add to cart</a>
            </div>
        </div>
    <% }); %>
</section>

<section class="product-categories">
    <h2>Browse by Category</h2>
    <div class="category-grid">
        <div class="category-item">Probiotics</div>
        <div class="category-item">Microbiome Support</div>
        <div class="category-item">Digestive Health</div>
    </div>
</section>

<script>
   document.addEventListener('DOMContentLoaded', () => {
    const mobileMenuToggle = document.createElement('button');
    mobileMenuToggle.classList.add('mobile-menu-toggle');
    mobileMenuToggle.innerHTML = `
        <i class="fa fa-chevron-down"></i>
    `;

    const nav = document.querySelector('nav');
    const navLinks = document.querySelector('.nav-links');
    nav.insertBefore(mobileMenuToggle, navLinks);

    mobileMenuToggle.addEventListener('click', () => {
        navLinks.classList.toggle('show');
        mobileMenuToggle.classList.toggle('active');
    });
});
</script>

<%- include('partials/footer') %>